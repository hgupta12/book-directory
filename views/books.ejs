<%- include('./partials/header.ejs') %> 
<div class="container">

    <div class="d-flex flex-wrap justify-content-between align-items-center">
        <h1>List of all Books</h1>
        <a href="/add" class="link-primary pl-2">Add a new book</a>
    </div>
    <div class="list-group col-12 col-md-8 mb-4">
        <% if(books.length>0){ %> 
            <% books.forEach(book=>{ %> 
                <a class="list-group-item" href="<%= `/books/${book._id}`  %> " >
                    <div class="div">
                        <h4 class="list-group-item-heading"><%= book.name %> </h4>
                        <% if(book.bestseller == true){ %>
                            <span class="bestseller">Bestseller <i class="fas fa-book"></i></span>
                        <% } %>  
                    </div>
                    <p class="list-group-item-text"><%= book.author.name %> </p>
                </a>
        <%}) %> 
        <% }else{ %>
            <p>No books to display!</p>
            <% } %>  
    </div>
</div>
        <%- include('./partials/footer.ejs') %> 
</body>
</html>